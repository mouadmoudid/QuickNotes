<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:descendantFocusability="blocksDescendants"
    android:focusable="true">

    <!-- PremiÃ¨re ligne : Contenu principal + Actions -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <!-- Miniature photo -->
        <ImageView
            android:id="@+id/imageViewPhoto"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginEnd="12dp"
            android:scaleType="centerCrop"
            android:background="@android:color/darker_gray"
            android:visibility="gone"/>

        <!-- Texte de la note -->
        <TextView
            android:id="@+id/textViewNote"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="16sp"
            android:maxLines="2"
            android:ellipsize="end"/>

        <!-- Boutons d'action -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- Bouton Photo (icÃ´ne au lieu de texte) -->
            <ImageButton
                android:id="@+id/buttonPhoto"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@android:drawable/ic_menu_camera"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Prendre une photo"
                android:layout_marginEnd="8dp"/>

            <!-- Bouton Delete (icÃ´ne au lieu de texte) -->
            <ImageButton
                android:id="@+id/buttonDelete"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@android:drawable/ic_menu_delete"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Supprimer la note"/>
        </LinearLayout>
    </LinearLayout>

    <!-- DeuxiÃ¨me ligne : Date + Ã‰tat photo -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="4dp">

        <!-- Date -->
        <TextView
            android:id="@+id/textViewDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@android:color/darker_gray"/>

        <!-- Indicateur de photo -->
        <TextView
            android:id="@+id/textViewPhotoIndicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:textSize="12sp"
            android:textColor="#FF4081"
            android:text="ðŸ“· Photo attachÃ©e"
            android:visibility="gone"/>
    </LinearLayout>

</LinearLayout>