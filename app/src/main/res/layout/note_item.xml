<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:descendantFocusability="blocksDescendants"
    android:focusable="true">

    <!-- PremiÃ¨re ligne : Contenu principal -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <!-- IcÃ´ne de note -->
        <ImageView
            android:id="@+id/imageViewPhoto"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@android:drawable/ic_menu_edit"
            android:layout_marginEnd="12dp"/>

        <!-- Texte de la note -->
        <TextView
            android:id="@+id/textViewNote"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:maxLines="2"
            android:ellipsize="end"/>
    </LinearLayout>

    <!-- DeuxiÃ¨me ligne : Date et actions -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">

        <!-- Date -->
        <TextView
            android:id="@+id/textViewDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="12sp"
            android:textColor="@android:color/darker_gray"
            android:drawableLeft="@android:drawable/ic_menu_month"
            android:drawablePadding="4dp"/>

        <!-- Bouton Photo -->
        <ImageButton
            android:id="@+id/buttonPhoto"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@android:drawable/ic_menu_camera"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Prendre une photo"
            android:layout_marginEnd="8dp"/>
        <ImageButton
            android:id="@+id/buttonDetails"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@android:drawable/ic_menu_info_details"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Afficher les dÃ©tails"
            android:layout_marginEnd="8dp"/>

        <!-- Bouton Supprimer -->
        <ImageButton
            android:id="@+id/buttonDelete"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@android:drawable/ic_menu_delete"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Supprimer la note"/>
    </LinearLayout>

    <!-- Indicateur de photo -->
    <TextView
        android:id="@+id/textViewPhotoIndicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textSize="12sp"
        android:textColor="#FF4081"
        android:text="ðŸ“· Photo attachÃ©e"
        android:visibility="gone"
        android:drawablePadding="4dp"/>

</LinearLayout>